<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

<div class="row">
  <div class="col-lg-1"></div>
  <div class="col-lg-3"><h4>名前</h4></div>
  <div class="col-lg-6">
    <div class="field">
      <%= f.label :(性) %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="field">
      <%= f.label :(名) %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-1"></div>
  <div class="col-lg-3"><h4>フリガナ</h4></div>
  <div class="col-lg-6">
    <div class="field">
      <%= f.label :(セイ) %><br />
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </div>
    <div class="field">
      <%= f.label :(メイ) %><br />
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="field">
    <div class="col-lg-1"></div>
    <div class="col-lg-3">
      <%= f.label :メールアドレス %><br />
    </div>
    <div class="col-lg-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="field">
    <div class="col-lg-1"></div>
    <div class="col-lg-3">
      <%= f.label :郵便番号(ハイフンなし) %><br />
    </div>
    <div class="col-lg-6">
      <%= f.number_field :postcode, autofocus: true, autocomplete: "postcode" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="field">
    <div class="col-lg-1"></div>
    <div class="col-lg-3">
      <%= f.label :住所 %><br />
    </div>
    <div class="col-lg-6">
      <%= f.number_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-1"></div>
  <div class="field">
    <div class="col-lg-3">
      <%= f.label :電話番号(ハイフンなし) %><br />
    </div>
    <div class="col-lg-6">
      <%= f.number_field :phone, autofocus: true, autocomplete: "phone" %>
    </div>
  </div>
</div>


  <div class="field">
      <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
</div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/customers/shared/links" %>
